build --cxxopt=-std=c++20
build --cxxopt=-Wall
build --cxxopt=-Wextra
build --cxxopt=-O3

# Use GCC 13 as the compiler (supports C++20 <format>)
build --repo_env=CC=/usr/bin/gcc-13
build --repo_env=CXX=/usr/bin/g++-13

# Enable color output
build --color=yes

# Show detailed test output
test --test_output=all
